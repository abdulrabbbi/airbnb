<% layout("/layouts/boilerplate")  -%>
<body>    
    <div class="row">
        <div class="col-8 offset-3 mt-3">
    <h2><b><%=list.title  %></b></h2>
</div>
    
    <div class="card col-6 offset-3 " >
        <img src="<%=list.image %>" class="card-img-top show-image" alt="listing">
        <div class="card-body">
          
          <p class="card-text">
            <%=list.description %> <br>
            <%=list.price.toLocaleString("en-IN") %> <br>
            <%=list.location %> <br>
            <%=list.country %> <br>
        </p>
        </div>
      </div>

  <div class="btns">
    
    <a href="/listing/<%=list.id%>/edit" class="btn btn-dark col-1 offset-3 add-btn">Edit</a><br><br>

    <form action="/delete/<%=list.id%>?_method=delete" method="post">
        <button  class="btn btn-dark offset-5">Delete</button>
   </form>
  </div>
<div class="col-8 offset-3 mb-3">
  <h4>leave the review</h4>
 <form action="/listing/<%=list.id%>/reviews" method="post" novalidate class="nonvalidation">
  <div class="mb-3 mt-3">
     <label for="rating" class="form-label">Rating</label>
     <input type="range" class="form-range" name="review[rating]"  id="rating" min="1" max="5">
  </div> 
<div class="mb-3 mt-3">
  <label for="comment" class="form-label">comment</label>
  <textarea name="review[comment]" class="form-control" id="comment" rows="5" cols="10" required></textarea>
  <div class="invalid-feedback">
    please add some commets for reviews
  </div>
</div>
<div >
  <button class="btn btn-outline-dark">submit</button>
</div>
 </form>
</div>
</div>
<script src="/javascriptcode/script.js"></script>
</body>
